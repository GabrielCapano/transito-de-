@model ForgotPasswordModel

@{
    Layout = "~/Areas/User/Views/Shared/Layout.cshtml";
    ViewBag.Title = "Redefinição de senha";
}

@section Scripts
{
    <script>
        var responseHandle = function (data, resp) {
            if (data.Status)
                window.location.href = '@Url.Action("Index", "Login")';
        };
    </script>
}
@section head
{
    <style>
        #btnConfirm
        {
            margin-top: 10px;
        }

        #ForgotPassword input[type=password]
        {
            width: 277px;
            margin: 5px 0 20px 0;
        }

        #ForgotPassword h3
        {
            margin-bottom: 20px;
        }
    </style>

}
<div id="ForgotPassword">
    <h3>Alterar minha senha</h3>

    @using (Html.BeginForm("ChangePassword", "Login", FormMethod.Post, new { @class = "form-vertical login-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary()

        @Html.HiddenFor(a => a.UserId)

        @Html.LabelFor(a => a.Password)
        @Html.PasswordFor(a => a.Password, new { @class = "span3" })

        @Html.LabelFor(a => a.ConfirmPassword)
        @Html.PasswordFor(a => a.ConfirmPassword, new { @class = "span3" })

        <button type="submit" id="btnConfirm" class="btn blue pull-right">
            Confirmar
        </button>
        <div class="clear"></div>
    }
</div>
