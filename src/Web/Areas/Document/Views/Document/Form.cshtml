@model Web.Areas.Document.Models.DocumentViewModel

@{
    Layout = null;
}

<html>
<head>
    <title>Upload</title>

    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    @Styles.Render(
                "~/Content/themes/metronic/plugins/bootstrap/css/bootstrap.css",
                "~/Content/themes/metronic/plugins/bootstrap-fileupload/bootstrap-fileupload.css",
                "~/Content/themes/metronic/plugins/font-awesome/css/font-awesome.css",
                "~/Content/themes/metronic/css/style-metro.css",
                "~/Content/themes/metronic/fonts/font.css"
    )
    @Styles.Render("~/Content/themes/metronic/plugins/bootstrap-fileupload/bootstrap-fileupload.css")

    <style type="text/css">
        #ui-datepicker-div {
            top: 5px !important;
            left: 137px !important;
        }

        .block-ui-black {
            background-color: #FFF !important;
        }
    </style>
</head>
<body style="overflow: hidden;">

    @using (Html.BeginForm("Save", "Document", FormMethod.Post, new { Area = "Document",  enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.ValidationSummary()
        @Html.AntiForgeryToken()

        @Html.HiddenFor(a => a.Id)
        @Html.HiddenFor(a => a.LastUpdated)
        @Html.HiddenFor(a => a.CreatedDate)
        @Html.HiddenFor(a => a.UpdatedBy)
        @Html.HiddenFor(a => a.CreatedBy)
        @Html.HiddenFor(a => a.DocumentExtension)
        @Html.HiddenFor(a => a.DocumentType)
        @Html.HiddenFor(a => a.Reference)
        @Html.HiddenFor(a => a.ReferenceId)
        @Html.HiddenFor(a=>a.FileStream)
        <div id="document-box">
            <div class="row-fluid">
                <div class="span6">
                    <div class="fileupload fileupload-new" data-provides="fileupload">
                        <div class="input-append span12">
                            <div class="uneditable-input">
                                <i class="icon-file fileupload-exists"></i>
                                <span class="fileupload-preview"></span>
                            </div><span class="btn btn-file">
                                      <span class="fileupload-new">Selecione o Arquivo</span>
                                      <span class="fileupload-exists">Selecionar Outro</span>
                                      <input type="file" id="FileUpload" name="FileUpload" />

                                  </span>
                            <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remover</a>
                        </div>
                    </div>
                </div>
                @if (ViewBag.ExpirationDate)
                {
                    <div class="span6">
                        <label class="span6">
                            Data de Expiração
                        </label>
                        <div class="span6">
                            @Html.TextBoxFor(a => a.ExpirationDate, new
                            {
                                @class = "span12",
                                @data_dgd_mask="99/99/9999"
                            })
                        </div>
                    </div>
                }
                else
                {
                    Html.HiddenFor(a => a.ExpirationDate);
                }
            </div>
        </div>

    }

    @Scripts.Render("~/Content/themes/metronic/plugins/jquery-1.8.3.min.js",
                        "~/Content/themes/metronic/plugins/bootstrap-toggle-buttons/static/js/jquery.toggle.buttons.js",
                        "~/Content/themes/metronic/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js",
                        "~/Content/themes/metronic/plugins/bootstrap/js/bootstrap.min.js",
                        "~/Content/themes/metronic/plugins/jquery.blockui.js",
                        "~/Content/themes/metronic/plugins/uniform/jquery.uniform.min.js",
                        "~/Scripts/jquery.maskedinput-1.3.1.js",
                        "~/Scripts/jquery.maskMoney.js",
                        "~/Scripts/digdin.js",
                        "~/Content/themes/metronic/scripts/app.js")
    @Scripts.Render("~/Content/themes/metronic/plugins/bootstrap-fileupload/bootstrap-fileupload.js")
    @Scripts.Render("~/Scripts/jquery.form.js")

    <script>
        digdin.init();
    </script>


</body>
</html>
